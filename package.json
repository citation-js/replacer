{
  "name": "citation-js-replacer",
  "version": "0.1.0",
  "description": "HTML API for Citation.js",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larsgw/citation.js-replacer.git"
  },
  "keywords": [
    "citation",
    "bibtex",
    "wikidata",
    "contentmine",
    "quickscrape",
    "csl",
    "citeproc"
  ],
  "dependencies": {
    "citation-js": "^0.3.0-7",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "copyfiles": "^1.2.0",
    "standard": "^10.0.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      [
        "env",
        {
          "targets": {
            "browser": [
              "> 1%",
              "last 10 versions",
              "ie > 7"
            ]
          }
        }
      ]
    ]
  },
  "scripts": {
    "lint": "standard \"src/**/*.js\"",
    "babel": "babel src -d lib --copy-files",
    "build": "browserify -e ./src/index.js -o build/replacer.citation.js -g [ babelify --ignore=citeproc --presets [ env ] ] && copyfiles -u 1 build/replacer.citation.js docs/src"
  },
  "author": "Lars Willighagen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/larsgw/citation.js-replacer/issues"
  },
  "homepage": "https://larsgw.github.io/citation.js-replacer/"
}
